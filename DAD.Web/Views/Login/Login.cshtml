@model DAD.Web.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div>
    <div class="container mt-5" id="alert_container">
    </div>

</div>

<div class="container" id="login-block">

    <div class="row">

        <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
            <h3 class="animated bounceInDown" style="display: none;">Autenticación</h3>

            <div class="login-box clearfix animated flipInY" style="margin-top:20px">
                <div class="login-logo">
                    <a href="#">
                        <img src="~/Images/FisiLogo.png" alt="Apdayc">

                    </a>
                </div>
                <hr>

                <div class="login-form">
                    <div class="alert alert-error hide">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <h4>Error!</h4>

                    </div>

                    @using (Html.BeginForm())
                    {

                        @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @placeholder = "Usuario", @style = "font-size: 9pt; font-family: Verdana", @id = "Txtuser", @name = "Txtuser" } })
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @placeholder = "Contraseña", @style = "font-size: 9pt; font-family: Verdana", @id = "Txtpassword", @name = "Txtpassword", @type = "password" } })



                        <input ID="ButtonLogin" value="Ingresar " class="btn btn-blue " type="submit" />

                    }

                    @*<div class="login-links">
                            <a href="@Url.Action("Contrasena","CambioContrasena")">
                                ¿Se te olvidó tu contraseña?
                            </a>
                            <br>

                        </div>*@
                </div>
            </div>

        </div>

    </div>
    <footer class="container">
        <p id="footer-text"><small>Copyright © 2019 <a href="javascript:void();">Todos los Derechos Reservados </a></small></p>
    </footer>

</div>
@section scripts {

    <script type="text/javascript">
        $(function () {
             var message = "@ViewBag.Message";
            var messagetype = "@ViewBag.Type";

            if (message == "" ) {

            } else {
                if (messagetype == "Error") {
                    toastr.error(message, messagetype);
                }
                if (messagetype == "Éxito") {
                    toastr.success(message, messagetype);
                }
                if (messagetype == "Alerta") {
                    toastr.warning(message, messagetype);
                }
                if (messagetype == "") {
                    toastr.info(message, messagetype);
                }

            }



        });
    </script>
}

