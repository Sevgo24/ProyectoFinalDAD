@model IEnumerable<DAD.DataAccess.Entities.RespuestaBandejaResultado>

@{
    ViewBag.Title = "Respuesta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <h1>SRVQUAL CALIDAD DE SERVICIO DE LA FISI - RESPUESTA: </h1>
        @using (Html.BeginForm("Respuesta", "Home", FormMethod.Post))
        {
            <div class="row col-12">


                <p class="col-2">
                    Codigo de alumno:
                </p>
                @Html.Editor("CODALUM", new { htmlAttributes = new { @class = "form-control col-3", @id = "CODALUM" } })
                @*<input type="text" id="CODALUM" />*@

            </div>
            <div class="row col-12">
                <p class="col-2">Dimensión:</p>
                @Html.DropDownList("dimensiones", new SelectList(ViewBag.ListaDimension, "CODDIMENSION", "NOMBREDIMENSION"), new { @class = "form-control col-3", @id = "dimensiones" })
            </div>
            <br />
            <div class="row d-flex justify-content-end">

                <button class="btn btn-primary mr-2">BUSCAR</button>
                <div></div>
                
                <a href="@Url.Action("ActualizarBaseDatos","Home")" class="btn  btn-primary">Actualizar</a>

            </div>

        }

        <br />


        <table class="table table-bordered nowrap" id="table">
            <thead class="thead-dark">


                <tr>
                    <th>

                        Codigo Alumno
                    </th>
                    <th>

                        Correo de Alumno
                    </th>
                    <th>

                        Nombre de Dimensión
                    </th>
                    <th>

                        Fecha de Registro
                    </th>
                    <th>

                        Nombre de Escuela
                    </th>
                    <th>

                        Ciclo Académico
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {

                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CODALUMNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CORREOALUMNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBREDIMENSION)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FECHAREGISTRO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBREESCUELA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CICLOALUMNO)
                            </td>

                        </tr>
                    }
                }
            </tbody>

        </table>
        <br />
        <br />
        <iframe width="1140" height="541.25" src="https://app.powerbi.com/reportEmbed?reportId=73b83aa8-5ea0-4f3a-bf41-36c3d7469c62&autoAuth=true&ctid=717b9a79-1b91-41ab-a6f7-a579b46a9b41&config=eyJjbHVzdGVyVXJsIjoiaHR0cHM6Ly93YWJpLXNvdXRoLWNlbnRyYWwtdXMtcmVkaXJlY3QuYW5hbHlzaXMud2luZG93cy5uZXQvIn0%3D" frameborder="0" allowFullScreen="true"></iframe>
        <br />
        <br />
    </div>
@section scripts{
    <script>

        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
