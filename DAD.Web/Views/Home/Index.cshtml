@model IEnumerable<DAD.DataAccess.Entities.AlumnoBandejaResultado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1>PROYECTO DAD FINAL</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="row">


            <p class="col-4">
                Codigo de alumno:
            </p>
            @Html.Editor("CODALUM", new { htmlAttributes = new { @class = "form-control col-3", @id = "CODALUM" } })
            @*<input type="text" id="CODALUM" />*@

        </div>
        <br />
        <button class="btn btn-primary">BUSCAR</button>

    }
    <br />
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Codigo Alumno

                </th>
                <th>
                    Correo Alumno

                </th>
                <th>
                    Sexo

                </th>
                <th>
                    Fecha de Registro

                </th>
                <th>
                    Nombre de escuela

                </th>
                <th>
                    Ciclo de alumno

                </th>
                <th>
                    Actualmente trabajando
                </th>
                @*<th></th>*@

            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {

            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CODALUMNO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CORREOALUMNO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SEXO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FECHAREGISTRO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOMBREESCUELA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CICLOALUMNO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TRABAJO)
                        </td>
                        @*<td>

                                @Html.ActionLink("Details", "Details", new { id=item.CODALUMNO }) |

                            </td>*@
                    </tr>
                }
            }

        </tbody>
    </table>

    <div class="row d-flex justify-content-end">
            <a href="#" class="btn btn-primary">Actualizar Base de Datos</a>
            @*<a href="#" class="btn btn-primary">Dimensión empatia</a>

            <a href="#" class="btn btn-primary">Dimensión capacidad de respuesta</a>

            <a href="#" class="btn btn-primary">Dimensión confiabilidad</a>

            <a href="#" class="btn btn-primary">Dimensión cortesia</a>

            <a href="#" class="btn btn-primary">Filtro por sexo</a>

            <a href="#" class="btn btn-primary">Filtro por año de ingreso</a>*@


    </div>
<br />
<br />
</div>

