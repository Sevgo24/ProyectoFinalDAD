@model IEnumerable<DAD.DataAccess.Entities.AlumnoBandejaResultado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <h1>SRVQUAL CALIDAD DE SERVICIO DE LA FISI: </h1>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="row">


                <p class="col-4">
                    Codigo de alumno:
                </p>
                @Html.Editor("CODALUM", new { htmlAttributes = new { @class = "form-control col-3", @id = "CODALUM" } })
                @*<input type="text" id="CODALUM" />*@

            </div>
            <br />
            <div class="row d-flex justify-content-around">
                <button class="btn btn-primary">BUSCAR</button>
                <br />
                <a href="@Url.Action("ActualizarBaseDatos","Home")" class="btn  btn-primary">Actualizar</a>

            </div>

        }
        <br />
        <table class="table table-bordered" id="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Codigo Alumno

                    </th>
                    <th>
                        Correo Alumno

                    </th>
                    <th>
                        Sexo

                    </th>
                    <th>
                        Fecha de Registro

                    </th>
                    <th>
                        Nombre de escuela

                    </th>
                    <th>
                        Ciclo de alumno

                    </th>
                    <th>
                        Actualmente trabajando
                    </th>
                    @*<th></th>*@

                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {

                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CODALUMNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CORREOALUMNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SEXO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FECHAREGISTRO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBREESCUELA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CICLOALUMNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TRABAJO)
                            </td>
                            @*<td>

                                @Html.ActionLink("Details", "Details", new { id=item.CODALUMNO }) |

                            </td>*@
                        </tr>
                    }
                }

            </tbody>
        </table>

